@model VasilekCerozhka.Models.ViewModels.Product.UpdateProductVM

<form asp-action="ProductEdit">
    <input asp-for="product.ProductId" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Обновить продукт</h1>

        <hr />
        <div class="row">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="col-2">
                <label asp-for="product.ProductName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="product.ProductName" class="form-control" />
                <span asp-validation-for="product.ProductName" class="text-danger"></span>
            </div>


            <div class="form-group row py-2">

                <div class="col-2">
                    <label asp-for="product.Category.CategoryName" class="control-label pt-2" style="font-size:20px;">Категории</label>
                </div>
                <div class="col-10 pb-2">

                    <select asp-for="paramsCategory" asp-items="@Model.SelectCategorys" class="form-select text-center">
                        <option disabled selected>@(Model.product.Category.CategoryName)</option>
                    </select>

                </div>

            </div>


            <div class="col-2">
                <label asp-for="product.Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="product.Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="product.Description" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="product.MainImageUrl" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="product.MainImageUrl" class="form-control" />
                <span asp-validation-for="product.MainImageUrl" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="product.Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="product.Price" class="form-control" />
                <span asp-validation-for="product.Price" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <a asp-action="ProductIndex" class="btn btn-outline-primary form-control">Вернуться</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Обновить" class="btn btn-outline-primary form-control" />
            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}